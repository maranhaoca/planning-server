{
  "compilerOptions": {
      "target": "ES6",
      "module": "commonjs",
      "outDir": "dist",
      "rootDir": "./",
      "strict": true,
      "noUnusedLocals": false,
      "noUnusedParameters": true,
      "noImplicitReturns": true,
      "noFallthroughCasesInSwitch": true,
      "esModuleInterop": true
  },
  "lib": [
    "es2017"
],
  "include": [
      "src/**/*"
  ],
  "exclude": [
      "node_modules",
      "**/*.test.ts"
  ]
}